<% content_for :title, "All Registrations" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to admin_root_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium flex items-center mb-2" do %>
            <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
          <% end %>
          <h1 class="text-3xl font-bold text-gray-900">All Registrations</h1>
          <p class="text-gray-600 mt-1">Complete list of event registrations</p>
        </div>
        <div class="text-right">
          <div class="text-sm text-gray-600">Total Registrations</div>
          <div class="text-2xl font-bold text-blue-600"><%= @registrations.count %></div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-full">
            <i class="fas fa-check-circle text-green-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-600">Paid Registrations</h3>
            <p class="text-2xl font-bold text-green-600">
              <%= @registrations.where(status: "paid").count %>
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-yellow-500">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-100 rounded-full">
            <i class="fas fa-clock text-yellow-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-600">Pending Payment</h3>
            <p class="text-2xl font-bold text-yellow-600">
              <%= @registrations.where(status: "pending").count %>
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-red-500">
        <div class="flex items-center">
          <div class="p-3 bg-red-100 rounded-full">
            <i class="fas fa-times-circle text-red-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-600">Canceled</h3>
            <p class="text-2xl font-bold text-red-600">
              <%= @registrations.where(status: "canceled").count %>
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <i class="fas fa-dollar-sign text-blue-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-600">Total Revenue</h3>
            <p class="text-2xl font-bold text-blue-600">
              <%= number_to_currency(@registrations.where(status: "paid").sum(:total_cents) / 100.0, unit: "CAD $") %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Registrations Table -->
    <div class="bg-white rounded-xl shadow-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <i class="fas fa-list text-blue-600 mr-3"></i>
          All Registrations
        </h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                ID / Registrant
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Event
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Participants
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Amount
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Registration Date
              </th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @registrations.each do |registration| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      #<%= registration.id %> â€¢ <%= registration.first_name %> <%= registration.last_name %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= registration.email %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= registration.event.name %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= registration.event.starts_at.strftime("%b %d, %Y") %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= registration.attendees.count %> total
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= registration.attendees.where(category: 'adult').count %> adults, 
                    <%= registration.attendees.where(category: 'minor').count %> minors
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= number_to_currency(registration.total_cents / 100.0, unit: "CAD $") %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case registration.status %>
                  <% when 'paid' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <i class="fas fa-check-circle mr-1"></i>Paid
                    </span>
                  <% when 'pending' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      <i class="fas fa-clock mr-1"></i>Pending
                    </span>
                  <% when 'canceled' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <i class="fas fa-times-circle mr-1"></i>Canceled
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= registration.created_at.strftime("%b %d, %Y") %>
                  <div class="text-xs text-gray-400">
                    <%= registration.created_at.strftime("%I:%M %p") %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end space-x-3">
                    <%= link_to admin_registration_path(registration), 
                        class: "text-blue-600 hover:text-blue-900" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to admin_event_path(registration.event), 
                        class: "text-purple-600 hover:text-purple-900" do %>
                      <i class="fas fa-calendar-alt"></i>
                    <% end %>
                    <% if registration.status == "paid" %>
                      <%= link_to invoice_event_registration_path(registration.event, registration, format: :pdf), 
                          class: "text-green-600 hover:text-green-900", target: "_blank" do %>
                        <i class="fas fa-file-pdf"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @registrations.empty? %>
        <div class="text-center py-12">
          <i class="fas fa-clipboard text-gray-300 text-4xl mb-4"></i>
          <p class="text-gray-500">No registrations found</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
  .btn {
    @apply inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg transition-colors duration-200;
  }
  
  .btn-primary {
    @apply bg-blue-600 hover:bg-blue-700 text-white;
  }
  
  .btn-outline-primary {
    @apply border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white;
  }
</style>

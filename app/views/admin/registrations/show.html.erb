<% content_for :title, "Registration Details" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to admin_event_path(@registration.event), class: "text-blue-600 hover:text-blue-800 text-sm font-medium flex items-center mb-2" do %>
            <i class="fas fa-arrow-left mr-2"></i>Back to Event
          <% end %>
          <h1 class="text-3xl font-bold text-gray-900">Registration Details</h1>
          <p class="text-gray-600 mt-1">Registration #<%= @registration.id %></p>
        </div>
        <div class="flex items-center space-x-3">
          <% if @registration.status == "paid" %>
            <%= link_to invoice_event_registration_path(@registration.event, @registration, format: :pdf), 
                class: "btn btn-outline-primary", target: "_blank" do %>
              <i class="fas fa-file-pdf mr-2"></i>Download Invoice
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Registration Info -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Registrant Information -->
        <div class="bg-white rounded-xl shadow-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 flex items-center">
              <i class="fas fa-user text-blue-600 mr-3"></i>
              Registrant Information
            </h2>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Full Name</label>
                <p class="text-lg font-semibold text-gray-900">
                  <%= @registration.first_name %> <%= @registration.last_name %>
                </p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Email Address</label>
                <p class="text-lg text-gray-900"><%= @registration.email %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Registration Date</label>
                <p class="text-lg text-gray-900">
                  <%= @registration.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Event</label>
                <p class="text-lg text-gray-900"><%= @registration.event.name %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Participants List -->
        <div class="bg-white rounded-xl shadow-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 flex items-center">
              <i class="fas fa-users text-blue-600 mr-3"></i>
              Participants (<%= @registration.attendees.count %>)
            </h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <% @registration.attendees.each_with_index do |attendee, index| %>
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                  <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 bg-<%= attendee.category == 'adult' ? 'purple' : 'orange' %>-100 rounded-full flex items-center justify-center">
                      <% if attendee.category == 'adult' %>
                        <i class="fas fa-user-tie text-purple-600"></i>
                      <% else %>
                        <i class="fas fa-child text-orange-600"></i>
                      <% end %>
                    </div>
                    <div>
                      <p class="font-semibold text-gray-900">
                        <%= attendee.first_name %> <%= attendee.last_name %>
                      </p>
                      <div class="flex items-center space-x-4 mt-1 text-sm text-gray-600">
                        <span>
                          <i class="fas fa-tag mr-1"></i>
                          <%= attendee.category.humanize %>
                        </span>
                        <span>
                          <i class="fas fa-birthday-cake mr-1"></i>
                          Age <%= Date.current.year - attendee.dob.year %>
                        </span>
                        <span>
                          <i class="fas fa-calendar mr-1"></i>
                          DOB: <%= attendee.dob.strftime("%b %d, %Y") %>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="text-right">
                    <p class="text-lg font-bold text-green-600">
                      <% if attendee.category == 'adult' %>
                        <%= number_to_currency(@registration.event.adult_price, unit: "CAD $") %>
                      <% else %>
                        <%= number_to_currency(@registration.event.minor_price, unit: "CAD $") %>
                      <% end %>
                    </p>
                    <p class="text-xs text-gray-500"><%= attendee.category.humanize %> Price</p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Payment & Status Info -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Status Card -->
        <div class="bg-white rounded-xl shadow-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
              <i class="fas fa-info-circle text-blue-600 mr-3"></i>
              Status
            </h3>
          </div>
          <div class="p-6">
            <div class="text-center">
              <% case @registration.status %>
              <% when 'paid' %>
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-check-circle text-green-600 text-2xl"></i>
                </div>
                <h4 class="text-xl font-bold text-green-600 mb-2">Payment Confirmed</h4>
                <p class="text-sm text-gray-600">
                  Paid on <%= @registration.paid_at&.strftime("%B %d, %Y") %>
                </p>
              <% when 'pending' %>
                <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-clock text-yellow-600 text-2xl"></i>
                </div>
                <h4 class="text-xl font-bold text-yellow-600 mb-2">Payment Pending</h4>
                <p class="text-sm text-gray-600">Awaiting payment confirmation</p>
              <% when 'canceled' %>
                <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-times-circle text-red-600 text-2xl"></i>
                </div>
                <h4 class="text-xl font-bold text-red-600 mb-2">Canceled</h4>
                <p class="text-sm text-gray-600">Registration was canceled</p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Payment Summary -->
        <div class="bg-white rounded-xl shadow-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
              <i class="fas fa-receipt text-green-600 mr-3"></i>
              Payment Summary
            </h3>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <!-- Breakdown -->
              <% adults = @registration.attendees.where(category: 'adult').count %>
              <% minors = @registration.attendees.where(category: 'minor').count %>
              
              <% if adults > 0 %>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600">Adults (<%= adults %>)</span>
                  <span class="font-medium">
                    <%= number_to_currency(adults * @registration.event.adult_price, unit: "CAD $") %>
                  </span>
                </div>
              <% end %>
              
              <% if minors > 0 %>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600">Minors (<%= minors %>)</span>
                  <span class="font-medium">
                    <%= number_to_currency(minors * @registration.event.minor_price, unit: "CAD $") %>
                  </span>
                </div>
              <% end %>
              
              <div class="border-t pt-4">
                <div class="flex justify-between items-center">
                  <span class="text-lg font-semibold text-gray-900">Total Amount</span>
                  <span class="text-xl font-bold text-green-600">
                    <%= number_to_currency(@registration.total_cents / 100.0, unit: "CAD $") %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Details -->
        <% if @registration.status == "paid" %>
          <div class="bg-white rounded-xl shadow-lg">
            <div class="px-6 py-4 border-b border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                <i class="fas fa-credit-card text-blue-600 mr-3"></i>
                Payment Details
              </h3>
            </div>
            <div class="p-6">
              <div class="space-y-3">
                <div>
                  <label class="block text-sm font-medium text-gray-600 mb-1">Payment Method</label>
                  <p class="text-sm text-gray-900">Credit Card (Stripe)</p>
                </div>
                <% if @registration.stripe_payment_intent_id %>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 mb-1">Transaction ID</label>
                    <p class="text-sm text-gray-900 font-mono">
                      <%= @registration.stripe_payment_intent_id %>
                    </p>
                  </div>
                <% end %>
                <div>
                  <label class="block text-sm font-medium text-gray-600 mb-1">Payment Date</label>
                  <p class="text-sm text-gray-900">
                    <%= @registration.paid_at&.strftime("%B %d, %Y at %I:%M %p") %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
  .btn {
    @apply inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg transition-colors duration-200;
  }
  
  .btn-primary {
    @apply bg-blue-600 hover:bg-blue-700 text-white;
  }
  
  .btn-outline-primary {
    @apply border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white;
  }
</style>

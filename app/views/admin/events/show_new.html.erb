<% content_for :title, "Event Details - #{@event.name}" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to admin_root_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium flex items-center mb-2" do %>
            <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
          <% end %>
          <h1 class="text-3xl font-bold text-gray-900"><%= @event.name %></h1>
          <p class="text-gray-600 mt-1">
            <i class="fas fa-calendar text-gray-400 mr-2"></i>
            <%= @event.starts_at.strftime("%B %d, %Y at %I:%M %p") %>
            <% if @event.ends_at %>
              - <%= @event.ends_at.strftime("%I:%M %p") %>
            <% end %>
          </p>
        </div>
        <div class="flex items-center space-x-3">
          <%= link_to participants_admin_event_path(@event), 
              class: "btn btn-outline-primary" do %>
            <i class="fas fa-users mr-2"></i>View All Participants
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Event Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Revenue -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-full">
            <i class="fas fa-dollar-sign text-green-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-600">Event Revenue</h3>
            <p class="text-2xl font-bold text-green-600"><%= number_to_currency(@total_revenue, unit: "CAD $") %></p>
          </div>
        </div>
      </div>

      <!-- Total Participants -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <i class="fas fa-users text-blue-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-600">Total Participants</h3>
            <p class="text-2xl font-bold text-blue-600"><%= @total_participants %></p>
          </div>
        </div>
      </div>

      <!-- Adults -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500">
        <div class="flex items-center">
          <div class="p-3 bg-purple-100 rounded-full">
            <i class="fas fa-user-tie text-purple-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-600">Adults</h3>
            <p class="text-2xl font-bold text-purple-600"><%= @total_adults %></p>
            <p class="text-xs text-gray-500"><%= number_to_currency(@event.adult_price, unit: "CAD $") %> each</p>
          </div>
        </div>
      </div>

      <!-- Minors -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-orange-500">
        <div class="flex items-center">
          <div class="p-3 bg-orange-100 rounded-full">
            <i class="fas fa-child text-orange-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-600">Minors</h3>
            <p class="text-2xl font-bold text-orange-600"><%= @total_minors %></p>
            <p class="text-xs text-gray-500"><%= number_to_currency(@event.minor_price, unit: "CAD $") %> each</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Participants Preview -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Adult Participants Preview -->
      <div class="bg-white rounded-xl shadow-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-gray-900 flex items-center">
              <i class="fas fa-user-tie text-purple-600 mr-3"></i>
              Adult Participants (<%= @total_adults %>)
            </h2>
            <% if @adult_participants.count > 5 %>
              <%= link_to participants_admin_event_path(@event), 
                  class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
                View All <i class="fas fa-arrow-right ml-1"></i>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="p-6">
          <% if @adult_participants.any? %>
            <div class="space-y-3">
              <% @adult_participants.limit(5).each do |participant| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div>
                    <p class="font-medium text-gray-900">
                      <%= participant.first_name %> <%= participant.last_name %>
                    </p>
                    <p class="text-sm text-gray-600">
                      Age: <%= Date.current.year - participant.dob.year %> • 
                      DOB: <%= participant.dob.strftime("%b %d, %Y") %>
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-green-600">
                      <%= number_to_currency(@event.adult_price, unit: "CAD $") %>
                    </p>
                    <p class="text-xs text-gray-500">
                      Reg: <%= participant.registration.first_name %> <%= participant.registration.last_name %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <i class="fas fa-user-times text-gray-300 text-3xl mb-4"></i>
              <p class="text-gray-500">No adult participants</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Minor Participants Preview -->
      <div class="bg-white rounded-xl shadow-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-gray-900 flex items-center">
              <i class="fas fa-child text-orange-600 mr-3"></i>
              Minor Participants (<%= @total_minors %>)
            </h2>
            <% if @minor_participants.count > 5 %>
              <%= link_to participants_admin_event_path(@event), 
                  class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
                View All <i class="fas fa-arrow-right ml-1"></i>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="p-6">
          <% if @minor_participants.any? %>
            <div class="space-y-3">
              <% @minor_participants.limit(5).each do |participant| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div>
                    <p class="font-medium text-gray-900">
                      <%= participant.first_name %> <%= participant.last_name %>
                    </p>
                    <p class="text-sm text-gray-600">
                      Age: <%= Date.current.year - participant.dob.year %> • 
                      DOB: <%= participant.dob.strftime("%b %d, %Y") %>
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-green-600">
                      <%= number_to_currency(@event.minor_price, unit: "CAD $") %>
                    </p>
                    <p class="text-xs text-gray-500">
                      Reg: <%= participant.registration.first_name %> <%= participant.registration.last_name %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <i class="fas fa-baby text-gray-300 text-3xl mb-4"></i>
              <p class="text-gray-500">No minor participants</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Registrations List -->
    <div class="bg-white rounded-xl shadow-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <i class="fas fa-clipboard-list text-blue-600 mr-3"></i>
          All Registrations (<%= @registrations.count %>)
        </h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Registrant
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Participants
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Amount
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Registration Date
              </th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @registrations.each do |registration| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= registration.first_name %> <%= registration.last_name %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= registration.email %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= registration.attendees.count %> total
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= registration.attendees.where(category: 'adult').count %> adults, 
                    <%= registration.attendees.where(category: 'minor').count %> minors
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= number_to_currency(registration.total_cents / 100.0, unit: "CAD $") %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case registration.status %>
                  <% when 'paid' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <i class="fas fa-check-circle mr-1"></i>Paid
                    </span>
                  <% when 'pending' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      <i class="fas fa-clock mr-1"></i>Pending
                    </span>
                  <% when 'canceled' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <i class="fas fa-times-circle mr-1"></i>Canceled
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= registration.created_at.strftime("%b %d, %Y") %>
                  <div class="text-xs text-gray-400">
                    <%= registration.created_at.strftime("%I:%M %p") %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to admin_registration_path(registration), 
                      class: "text-blue-600 hover:text-blue-900 mr-3" do %>
                    <i class="fas fa-eye mr-1"></i>View
                  <% end %>
                  <% if registration.status == "paid" %>
                    <%= link_to invoice_event_registration_path(registration.event, registration, format: :pdf), 
                        class: "text-green-600 hover:text-green-900", target: "_blank" do %>
                      <i class="fas fa-file-pdf mr-1"></i>PDF
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @registrations.empty? %>
        <div class="text-center py-12">
          <i class="fas fa-clipboard text-gray-300 text-4xl mb-4"></i>
          <p class="text-gray-500">No registrations for this event yet</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
  .btn {
    @apply inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg transition-colors duration-200;
  }
  
  .btn-primary {
    @apply bg-blue-600 hover:bg-blue-700 text-white;
  }
  
  .btn-outline-primary {
    @apply border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white;
  }
</style>

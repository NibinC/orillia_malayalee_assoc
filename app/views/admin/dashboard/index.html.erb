<% content_for :title, "Admin Dashboard" %>

<style>
  .admin-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
  }
  .event-card {
    transition: all 0.3s ease;
    cursor: pointer;
    border-left: 4px solid #007bff;
  }
  .event-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }
</style>

<div class="admin-gradient">
  <!-- Header -->
  <div class="bg-white shadow-sm border-bottom">
    <div class="container-fluid py-4">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="display-5 fw-bold text-dark mb-1">üèõÔ∏è Event Management Dashboard</h1>
          <p class="text-muted">Orillia Malayalee Association Events</p>
        </div>
        <div class="d-flex align-items-center gap-3">
          <span class="text-muted small">Welcome back, <%= current_admin_user.email %></span>
          <%= link_to "üè† Website", root_path, class: "btn btn-outline-primary btn-sm" %>
          <%= link_to "üö™ Logout", destroy_admin_user_session_path, 
                      data: { "turbo-method": :delete }, class: "btn btn-outline-danger btn-sm" %>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid py-5">
    <!-- Events Management -->
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="card shadow border-0">
          <div class="card-header bg-white border-0 pb-3">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h3 class="card-title fw-bold d-flex align-items-center mb-0">
                  <i class="fas fa-calendar-check text-primary me-3"></i>
                  Event Management
                </h3>
                <p class="text-muted mb-0 mt-2">Click on any event to view detailed statistics</p>
              </div>
              <div>
                <%= link_to new_admin_event_path, class: "btn btn-primary" do %>
                  <i class="fas fa-plus me-2"></i>Add New Event
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-body">
            <% if @events.any? %>
              <div class="row g-4">
                <% @events.each do |event| %>
                  <% paid_registrations = event.registrations.where(status: "paid") %>
                  <% total_participants = paid_registrations.joins(:attendees).count %>
                  <% event_revenue = paid_registrations.sum(:total_cents) / 100.0 %>
                  
                  <div class="col-lg-6 col-12">
                    <%= link_to admin_event_path(event), class: "text-decoration-none" do %>
                      <div class="card event-card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                          <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="flex-grow-1">
                              <h4 class="card-title fw-bold text-dark mb-2"><%= event.name %></h4>
                              <p class="text-muted mb-0">
                                <i class="fas fa-calendar text-muted me-2"></i>
                                <%= event.starts_at.strftime("%B %d, %Y at %I:%M %p") %>
                              </p>
                            </div>
                            <div class="ms-3 d-flex align-items-center gap-2">
                              <%= link_to edit_admin_event_path(event), class: "btn btn-sm btn-outline-warning", title: "Edit Event" do %>
                                <i class="fas fa-edit"></i>
                              <% end %>
                              <%= link_to admin_event_path(event), 
                                  data: { "turbo-method": :delete, confirm: "Are you sure you want to delete this event? This action cannot be undone." },
                                  class: "btn btn-sm btn-outline-danger", title: "Delete Event" do %>
                                <i class="fas fa-trash"></i>
                              <% end %>
                              <i class="fas fa-arrow-right text-primary ms-2"></i>
                            </div>
                          </div>
                          
                          <div class="row g-3 mt-2">
                            <div class="col-6">
                              <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 text-primary rounded p-2 me-3">
                                  <i class="fas fa-users"></i>
                                </div>
                                <div>
                                  <h6 class="fw-bold mb-0"><%= total_participants %></h6>
                                  <small class="text-muted">Participants</small>
                                </div>
                              </div>
                            </div>
                            <div class="col-6">
                              <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 text-success rounded p-2 me-3">
                                  <i class="fas fa-dollar-sign"></i>
                                </div>
                                <div>
                                  <h6 class="fw-bold mb-0">$<%= event_revenue.to_i %></h6>
                                  <small class="text-muted">Revenue</small>
                                </div>
                              </div>
                            </div>
                            <div class="col-6">
                              <div class="d-flex align-items-center">
                                <div class="bg-info bg-opacity-10 text-info rounded p-2 me-3">
                                  <i class="fas fa-clipboard-list"></i>
                                </div>
                                <div>
                                  <h6 class="fw-bold mb-0"><%= paid_registrations.count %></h6>
                                  <small class="text-muted">Registrations</small>
                                </div>
                              </div>
                            </div>
                            <div class="col-6">
                              <div class="d-flex align-items-center">
                                <div class="bg-warning bg-opacity-10 text-warning rounded p-2 me-3">
                                  <i class="fas fa-eye"></i>
                                </div>
                                <div>
                                  <h6 class="fw-bold mb-0 text-primary">View Details</h6>
                                  <small class="text-muted">Click to see more</small>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-5">
                <i class="fas fa-calendar-times text-muted display-1 mb-4 opacity-50"></i>
                <h4 class="text-muted mb-2">No Events Found</h4>
                <p class="text-muted">There are currently no events to manage.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

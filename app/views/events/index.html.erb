<h2 class="fw-bold text-success mb-4">Upcoming Events</h2>

<% @events.each do |event| %>
  <div class="card mb-3 shadow-sm border-0">
    <div class="card-body">
      <h4 class="fw-bold"><%= event.name %></h4>
      <p class="text-muted mb-1"><%= event.starts_at.strftime("%B %d, %Y %H:%M") %></p>
      <p class="mb-3">Adult: <strong>$<%= event.adult_price_cents / 100 %></strong> Â· Minor: <strong>$<%= event.minor_price_cents / 100 %></strong></p>

      <%= link_to "Register", new_event_registration_path(event),
          class: "btn btn-success btn-sm px-4 fw-semibold" %>
    </div>
  </div>
<% end %>

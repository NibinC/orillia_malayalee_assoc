<div class="events-page">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="section-header text-center mb-5">
          <h1 class="section-title">
            <i class="fas fa-calendar-star me-3"></i>
            All Events
          </h1>
          <p class="section-subtitle">Join us for memorable celebrations and cultural gatherings</p>
        </div>
        
        <% @events.each do |event| %>
          <div class="event-card mb-4">
            <div class="event-card-body">
              <div class="row align-items-center">
                <div class="col-md-8">
                  <div class="event-info">
                    <h3 class="event-title"><%= event.name %></h3>
                    <p class="event-date">
                      <i class="fas fa-calendar-alt me-2"></i>
                      <%= event.starts_at.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                    <div class="event-pricing">
                      <span class="price-badge adult-price">Adult: $<%= sprintf("%.2f", event.adult_price_cents/100.0) %></span>
                      <span class="price-badge minor-price">Minor: $<%= sprintf("%.2f", event.minor_price_cents/100.0) %></span>
                    </div>
                  </div>
                </div>
                <div class="col-md-4 text-md-end">
                  <%= link_to new_event_registration_path(event), class: "btn-register" do %>
                    <span class="btn-text">Register Now</span>
                    <i class="fas fa-arrow-right ms-2"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <% if @events.empty? %>
          <div class="no-events-card">
            <div class="text-center">
              <div class="no-events-icon">ðŸŽª</div>
              <h3>No upcoming events at this time</h3>
              <p class="mb-4">Check back soon for exciting new celebrations and cultural gatherings!</p>
              <%= link_to "Return to Home", root_path, class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
.events-page {
  min-height: 80vh;
  padding: 2rem 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}
</style>

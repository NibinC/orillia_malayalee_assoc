<!-- Full-Width Hero Landscape Section -->
<div class="hero-landscape-section">
  <div class="hero-overlay">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-lg-10">
          <div class="hero-content">
            <h1 class="hero-title">Welcome to ORMA!</h1>
            <h2 class="hero-subtitle">Orillia Malayalee Association</h2>
            <p class="hero-description">
              Community of Malayalees in Orillia, Ontario – culture, celebration, and connection.
            </p>
            <div class="hero-badges">
              <span class="hero-badge">🇮🇳 Fostering Heritage</span>
              <span class="hero-badge">🤝 Building Community</span>
              <span class="hero-badge">🎉 Celebrating Culture</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="scroll-indicator">
    <i class="fas fa-chevron-down"></i>
  </div>
</div>

<!-- Community Values Section -->
<div class="values-section">
  <div class="container">
    <div class="values-row">
      <div class="value-tile">
        <div class="value-icon">🌟</div>
        <h4>Unity in Diversity</h4>
        <p>Bringing together Malayalees from all walks of life in the beautiful city of Orillia.</p>
      </div>
      <div class="value-tile">
        <div class="value-icon">🎭</div>
        <h4>Cultural Heritage</h4>
        <p>Preserving and celebrating our rich Malayalam traditions, festivals, and arts.</p>
      </div>
      <div class="value-tile">
        <div class="value-icon">🤗</div>
        <h4>Community Support</h4>
        <p>Supporting each other through life"'"s journeys with warmth and solidarity.</p>
      </div>
    </div>
  </div>
</div>

<!-- Events Section -->
<div class="events-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="section-header text-center mb-5">
          <h2 class="section-title">
            <i class="fas fa-calendar-star me-3"></i>
            Upcoming Events
          </h2>
          <p class="section-subtitle">Join us for memorable celebrations and cultural gatherings</p>
        </div>
        
        <% @events.each do |event| %>
          <div class="event-card mb-4">
            <div class="event-card-body">
              <div class="row align-items-center">
                <div class="col-md-8">
                  <div class="event-info">
                    <h5 class="event-title"><%= event.name %></h5>
                    <p class="event-date">
                      <i class="fas fa-calendar-alt me-2"></i>
                      <%= event.starts_at.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                    <div class="event-pricing">
                      <span class="price-badge adult-price">Adult: $<%= sprintf("%.2f", event.adult_price_cents/100.0) %></span>
                      <span class="price-badge minor-price">Minor: $<%= sprintf("%.2f", event.minor_price_cents/100.0) %></span>
                    </div>
                  </div>
                </div>
                <div class="text-md-end">
                  <%= link_to new_event_registration_path(event), class: "btn-register" do %>
                    <span class="btn-text">Register Now</span>
                    <i class="fas fa-arrow-right ms-2"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <% if @events.empty? %>
          <div class="no-events-card">
            <div class="text-center">
              <div class="no-events-icon">🎪</div>
              <h5>No upcoming events at this time</h5>
              <p class="mb-0">Check back soon for exciting new celebrations and cultural gatherings!</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


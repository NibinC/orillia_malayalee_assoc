<%- if controller_name != 'sessions' %>
  <%= link_to new_session_path(resource_name), class: "btn btn-outline-success btn-sm me-2 mb-2" do %>
    <i class="fas fa-sign-in-alt me-1"></i>Log in
  <% end %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to new_password_path(resource_name), class: "text-decoration-none text-muted small" do %>
    <i class="fas fa-question-circle me-1"></i>Forgot your password?
  <% end %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to new_confirmation_path(resource_name), class: "text-decoration-none text-muted small" do %>
    <i class="fas fa-envelope-open me-1"></i>Didn't receive confirmation instructions?
  <% end %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to new_unlock_path(resource_name), class: "text-decoration-none text-muted small" do %>
    <i class="fas fa-unlock me-1"></i>Didn't receive unlock instructions?
  <% end %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
